{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Alias */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/cpuvsim/components/*"],
      "@common/*": ["./src/cpuvsim/components/common/*"],
      "@errors/*": ["./src/cpuvsim/components/errors/*"],
      "@util/*": ["./src/cpuvsim/util/*"],
      "@hooks/*": ["./src/cpuvsim/hooks/*"],
      "@pages/*": ["./src/cpuvsim/pages/*"],
      "@assets/*": ["./src/cpuvsim/assets/*"],
      "@public/*": ["./public/*"],
    },
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
