# EditorConfig is awesome: https://editorconfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Indentation and character set
[*]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Matches multiple files with brace expansion
# Set default charset
[*.{js,jsx,ts,tsx,css,scss,sass,html,json,md}]
charset = utf-8

# 4 spaces for JSON
[*.json]
indent_size = 2

# 2 spaces for JavaScript, TypeScript, and other files
[*.{js,jsx,ts,tsx,css,scss,sass,html}]
indent_size = 2

# Tailwind CSS configuration files
[tailwind.config.{js,ts}]
indent_size = 2

# Markdown files (no trimming trailing whitespace for readability)
[*.md]
trim_trailing_whitespace = false

# Configuration files
[*.{yml,yaml}]
indent_size = 2
